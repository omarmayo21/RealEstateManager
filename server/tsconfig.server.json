{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "..",
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": false,
    "skipLibCheck": true,
    "noEmitOnError": false
  },
  "include": [
    "./*.ts",
    "./**/*.ts",
    "../shared/**/*.ts"
  ],
  "exclude": [
    "index-dev.ts",
    "node_modules"
  ]
}
